# Configuración del servidor
PORT=3001
NODE_ENV=production

# Configuración de archivos
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Configuración de base de datos
DATABASE_PATH=./database.db

# Configuración CORS (opcional)
CORS_ORIGIN=*

# Configuración de backup (para docker-compose)
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=7

# Configuración de logs
LOG_LEVEL=info

# URL base (para enlaces en emails o notificaciones)
BASE_URL=http://localhost:3001

# Configuración de seguridad (opcional)
# JWT_SECRET=tu_secreto_jwt_aqui
# SESSION_SECRET=tu_secreto_de_sesion_aqui

# Configuración de email (para notificaciones futuras)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=tu_email@gmail.com
# SMTP_PASS=tu_password_de_aplicacion